---
export interface Props {
    title: string;
    description?: string;
}

const {
    title,
    description = "Practical tools for Harney County families to build healthy screen habits",
} = Astro.props;
import "../styles/global.css";
---

<!doctype html>
<html lang="en" data-theme="flexoki">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content={description} />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="manifest" href="/manifest.webmanifest" />
        <meta name="theme-color" content="#205EA6" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body class="bg-base-100 text-base-content">
        <nav class="navbar bg-base-200 sticky top-0 z-50 shadow-sm">
            <div class="navbar-start">
                <div class="dropdown">
                    <div
                        tabindex="0"
                        role="button"
                        class="btn btn-ghost lg:hidden"
                    >
                        <svg
                            class="w-5 h-5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            aria-label="Open navigation menu"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M4 6h16M4 12h8m-8 6h12"></path>
                        </svg>
                    </div>
                    <ul
                        tabindex="0"
                        class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52"
                    >
                        <li><a href="/quick-start">Quick Start</a></li>
                        <li><a href="/screen-time">Screen Time</a></li>
                        <li><a href="/online-safety">Online Safety</a></li>
                        <li><a href="/mindful-breaks">Mindful Breaks</a></li>
                        <li><a href="/survey">Survey</a></li>
                        <li><a href="/resources">Resources</a></li>
                    </ul>
                </div>
                <a href="/" class="btn btn-ghost text-xl font-bold text-primary"
                    >Harney Digital Wellness</a
                >
            </div>
            <div class="navbar-center hidden lg:flex">
                <ul class="menu menu-horizontal px-1">
                    <li>
                        <a href="/quick-start" class="hover:text-primary"
                            >Quick Start</a
                        >
                    </li>
                    <li>
                        <a href="/screen-time" class="hover:text-primary"
                            >Screen Time</a
                        >
                    </li>
                    <li>
                        <a href="/online-safety" class="hover:text-primary"
                            >Online Safety</a
                        >
                    </li>
                    <li>
                        <a href="/mindful-breaks" class="hover:text-primary"
                            >Mindful Breaks</a
                        >
                    </li>
                    <li>
                        <a href="/survey" class="hover:text-primary">Survey</a>
                    </li>
                    <li>
                        <a href="/resources" class="hover:text-primary"
                            >Resources</a
                        >
                    </li>
                </ul>
            </div>
            <div class="navbar-end">
                <a href="/get-help" class="btn btn-accent btn-sm"
                    >Get Help Now</a
                >
            </div>
        </nav>

        <main>
            <slot />
        </main>

        <footer class="bg-base-200 text-base-content">
            <div class="container mx-auto px-6 py-10">
                <div
                    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8"
                >
                    <!-- Brand Section -->
                    <div class="lg:col-span-1">
                        <div class="flex items-center gap-3 mb-4">
                            <svg
                                class="w-10 h-10 text-primary flex-shrink-0"
                                fill="currentColor"
                                viewBox="0 0 24 24"
                                aria-label="Digital wellness shield logo"
                            >
                                <path
                                    d="M12 2L2 7v10c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V7l-10-5z"
                                ></path>
                            </svg>
                            <div>
                                <h3 class="font-bold text-lg text-primary">
                                    Harney Digital Wellness
                                </h3>
                                <p class="text-sm text-base-content opacity-80">
                                    Supporting families in the digital age
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Resources Section -->
                    <div>
                        <h6 class="footer-title text-base font-semibold mb-4">
                            Resources
                        </h6>
                        <div class="flex flex-col space-y-2">
                            <a
                                class="link link-hover text-sm"
                                href="/quick-start">Quick Start Guides</a
                            >
                            <a
                                class="link link-hover text-sm"
                                href="/screen-time">Screen Time Tools</a
                            >
                            <a
                                class="link link-hover text-sm"
                                href="/online-safety">Online Safety</a
                            >
                            <a
                                class="link link-hover text-sm"
                                href="/mindful-breaks">Mindful Breaks</a
                            >
                        </div>
                    </div>

                    <!-- Support Section -->
                    <div>
                        <h6 class="footer-title text-base font-semibold mb-4">
                            Support
                        </h6>
                        <div class="flex flex-col space-y-2">
                            <a class="link link-hover text-sm" href="/get-help"
                                >Local Resources</a
                            >
                            <a
                                class="link link-hover text-sm"
                                href="/get-help#crisis">Crisis Support</a
                            >
                            <a class="link link-hover text-sm" href="/survey"
                                >Parent Survey</a
                            >
                            <a class="link link-hover text-sm" href="/resources"
                                >All Resources</a
                            >
                        </div>
                    </div>

                    <!-- About Section -->
                    <div>
                        <h6 class="footer-title text-base font-semibold mb-4">
                            About
                        </h6>
                        <div class="flex flex-col space-y-2">
                            <p class="text-sm text-base-content opacity-80">
                                Created for Harney County families
                            </p>
                            <p class="text-sm text-base-content opacity-80">
                                Backed by research from Pacific University
                            </p>
                            <p class="text-sm text-base-content opacity-80">
                                Approved by Harney County School District
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </body>
</html>
