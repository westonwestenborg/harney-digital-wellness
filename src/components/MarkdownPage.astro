---
import Layout from '../layouts/Layout.astro';

export interface Props {
  entry: any;
}

const { entry } = Astro.props;
const { Content } = await entry.render();
const { title, description, hero } = entry.data;
---

<Layout title={title} description={description}>
  <div class="min-h-screen bg-base-100">
    <!-- Hero Section -->
    <section class={`bg-gradient-to-r ${hero.gradient || 'from-flexoki-blue-50 to-flexoki-green-50'} py-16`}>
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-4xl font-bold text-primary mb-4">{hero.title}</h1>
        <p class="text-xl text-base-content opacity-70 max-w-2xl mx-auto">
          {hero.subtitle}
        </p>
      </div>
    </section>

    <!-- Content Section -->
    <section class="py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto prose prose-lg prose-slate mx-auto">
          <Content />
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  /* Custom prose styles */
  .prose {
    max-width: none;
    color: #585031;
  }
  
  .prose h2 {
    font-size: 1.5rem;
    font-weight: bold;
    color: #205EA6;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  
  .prose h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: #66800B;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }
  
  .prose h4 {
    font-size: 1.125rem;
    font-weight: 600;
    margin-top: 1rem;
    margin-bottom: 0.5rem;
  }
  
  .prose p {
    margin-bottom: 1rem;
    opacity: 0.9;
  }
  
  .prose ul {
    margin-bottom: 1rem;
  }
  
  .prose li {
    margin-bottom: 0.5rem;
    opacity: 0.9;
  }
  
  .prose a {
    color: #205EA6;
    text-decoration: underline;
  }
  
  .prose a:hover {
    color: #1A4F8C;
  }
  
  .prose strong {
    font-weight: 600;
  }
  
  .prose blockquote {
    border-left: 4px solid #A02F6F;
    padding-left: 1rem;
    font-style: italic;
    background-color: rgba(160, 47, 111, 0.05);
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
    margin: 1rem 0;
  }
  
  .prose hr {
    border-color: #E6E4D9;
    margin: 2rem 0;
  }
  
  .prose code {
    background-color: #F2F0E5;
    padding: 0.125rem 0.25rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
  }
</style>