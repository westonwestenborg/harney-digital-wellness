---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Get Help - Harney County Digital Wellness">
  <div class="min-h-screen bg-base-100">
    <!-- Hero Section -->
    <section class="bg-gradient-to-r from-flexoki-magenta-50 to-flexoki-paper-50 py-16">
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-4xl font-bold text-accent mb-4">Get Help</h1>
        <p class="text-xl text-base-content opacity-70 max-w-2xl mx-auto">
          Local and national resources for Harney County families
        </p>
      </div>
    </section>

    <!-- Crisis Support -->
    <section class="py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <div class="card bg-base-100 shadow-lg mb-8">
            <div class="card-body">
              <h2 class="text-3xl font-bold text-accent mb-6">Crisis Support - Available 24/7</h2>
              
              <div class="alert alert-error mb-6">
                <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z" />
                </svg>
                <div>
                  <h3 class="font-bold">If you or your child are in immediate danger</h3>
                  <div class="text-xs">Please call 911 or go to your nearest emergency room immediately.</div>
                </div>
              </div>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <!-- National Crisis Support -->
                <div>
                  <h3 class="text-xl font-semibold text-primary mb-4">National Crisis Support</h3>
                  
                  <div class="space-y-4">
                    <div class="card bg-primary/5 border border-primary/20">
                      <div class="card-body p-4">
                        <h4 class="font-semibold text-primary">988 Suicide & Crisis Lifeline</h4>
                        <ul class="text-sm text-base-content opacity-70 mt-2">
                          <li>• Call or text 988 for free, confidential crisis support</li>
                          <li>• Available 24/7, 365 days a year</li>
                        </ul>
                        <div class="card-actions mt-3">
                          <a href="tel:988" class="btn btn-primary btn-sm">Call 988</a>
                        </div>
                      </div>
                    </div>

                    <div class="card bg-secondary/5 border border-secondary/20">
                      <div class="card-body p-4">
                        <h4 class="font-semibold text-secondary">Crisis Text Line</h4>
                        <ul class="text-sm text-base-content opacity-70 mt-2">
                          <li>• Text HOME to 741741 for crisis support</li>
                          <li>• Available 24/7</li>
                        </ul>
                        <div class="card-actions mt-3">
                          <a href="sms:741741&body=HOME" class="btn btn-secondary btn-sm">Text HOME to 741741</a>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Local Crisis Support -->
                <div>
                  <h3 class="text-xl font-semibold text-primary mb-4">Local Crisis Support</h3>
                  
                  <div class="bg-accent/10 p-6 rounded-lg">
                    <p class="text-base-content opacity-70 mb-4">
                      <strong>> PACIFIC UNIVERSITY TEAM:</strong> Please add Symmetry Crisis Support contact information and any other local crisis resources here.
                    </p>
                    <div class="text-sm text-base-content opacity-60">
                      <p><strong>What to include:</strong></p>
                      <ul class="list-disc list-inside mt-2 space-y-1">
                        <li>Symmetry Crisis Support phone number</li>
                        <li>Hours of operation</li>
                        <li>What services they provide</li>
                        <li>How to access services</li>
                        <li>Any other local crisis resources</li>
                      </ul>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Local Harney County Resources -->
    <section class="py-16 bg-base-200">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl font-bold text-center text-primary mb-12">Local Harney County Resources</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <!-- School District -->
            <div class="card bg-base-100 shadow-lg">
              <div class="card-body">
                <h3 class="card-title text-xl text-primary mb-4">Harney County School District</h3>
                
                <div class="space-y-4">
                  <div>
                    <h4 class="font-semibold mb-2">Counseling Center</h4>
                    <p class="text-base-content opacity-70 text-sm mb-2">
                      > **PACIFIC UNIVERSITY TEAM:** Add information about school counseling services, how to access them, and what support they provide for digital wellness issues.
                    </p>
                  </div>

                  <div>
                    <h4 class="font-semibold mb-2">Technology Support</h4>
                    <p class="text-base-content opacity-70 text-sm mb-2">
                      > **PACIFIC UNIVERSITY TEAM:** Add information about tech support for families, device management assistance, and educational technology guidance.
                    </p>
                  </div>

                  <div>
                    <h4 class="font-semibold mb-2">Contact Information</h4>
                    <p class="text-base-content opacity-70 text-sm">
                      > **PACIFIC UNIVERSITY TEAM:** Add contact information, hours, and how to access these services.
                    </p>
                  </div>
                </div>
              </div>
            </div>

            <!-- Symmetry Care -->
            <div class="card bg-base-100 shadow-lg">
              <div class="card-body">
                <h3 class="card-title text-xl text-secondary mb-4">Symmetry Care</h3>
                
                <div class="space-y-4">
                  <div>
                    <h4 class="font-semibold mb-2">Mental Health Services</h4>
                    <p class="text-base-content opacity-70 text-sm mb-2">
                      > **PACIFIC UNIVERSITY TEAM:** Add information about mental health services available through Symmetry Care, including counseling for digital wellness issues.
                    </p>
                  </div>

                  <div>
                    <h4 class="font-semibold mb-2">Family Support Programs</h4>
                    <p class="text-base-content opacity-70 text-sm mb-2">
                      > **PACIFIC UNIVERSITY TEAM:** Add information about family support programs, parenting resources, and community support services.
                    </p>
                  </div>

                  <div>
                    <h4 class="font-semibold mb-2">Contact & Scheduling</h4>
                    <p class="text-base-content opacity-70 text-sm">
                      > **PACIFIC UNIVERSITY TEAM:** Add contact information, appointment scheduling, insurance information, and accessibility details.
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Key School Contacts -->
    <section class="py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl font-bold text-center text-primary mb-8">Key School Contacts</h2>
          
          <div class="card bg-base-100 shadow-lg">
            <div class="card-body">
              <p class="text-base-content opacity-70 mb-6">
                These school district staff members can provide support for digital wellness concerns and connect you with appropriate resources.
              </p>
              
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="bg-primary/5 p-4 rounded-lg">
                  <h3 class="font-semibold text-primary mb-2">Nicki Henshaw</h3>
                  <p class="text-base-content opacity-70 text-sm">
                    > **PACIFIC UNIVERSITY TEAM:** Add Nicki's title, role, contact information, best times to contact, and areas of specialization.
                  </p>
                </div>

                <div class="bg-secondary/5 p-4 rounded-lg">
                  <h3 class="font-semibold text-secondary mb-2">Additional Contact</h3>
                  <p class="text-base-content opacity-70 text-sm">
                    > **PACIFIC UNIVERSITY TEAM:** Add second contact person's name, title, role, contact information, best times to contact, and areas of specialization.
                  </p>
                </div>
              </div>
              
              <div class="mt-6 p-4 bg-accent/10 rounded-lg">
                <p class="text-sm text-base-content opacity-70">
                  <strong>Note:</strong> Don't hesitate to reach out to these contacts even if you're not sure your concern fits their role. They can help connect you with the right resources.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- National Support Resources -->
    <section class="py-16 bg-base-200">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl font-bold text-center text-primary mb-12">National Support Resources</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <div class="card bg-base-100 shadow-lg">
              <div class="card-body">
                <h3 class="card-title text-lg">SAMHSA Treatment Locator</h3>
                <p class="text-sm text-base-content opacity-70 mb-4">
                  Find mental health and substance abuse treatment programs in your area.
                </p>
                <a href="https://findtreatment.samhsa.gov" target="_blank" class="btn btn-outline btn-sm">Find Treatment</a>
              </div>
            </div>

            <div class="card bg-base-100 shadow-lg">
              <div class="card-body">
                <h3 class="card-title text-lg">National Parent Helpline</h3>
                <p class="text-sm text-base-content opacity-70 mb-4">
                  Support for parents facing any challenge.
                </p>
                <a href="tel:1-855-427-2736" class="btn btn-outline btn-sm">Call Now</a>
              </div>
            </div>

            <div class="card bg-base-100 shadow-lg">
              <div class="card-body">
                <h3 class="card-title text-lg">Crisis Text Line</h3>
                <p class="text-sm text-base-content opacity-70 mb-4">
                  Free, 24/7 crisis support via text.
                </p>
                <a href="sms:741741&body=HOME" class="btn btn-outline btn-sm">Text HOME</a>
              </div>
            </div>

            <div class="card bg-base-100 shadow-lg">
              <div class="card-body">
                <h3 class="card-title text-lg">National Sexual Assault Hotline</h3>
                <p class="text-sm text-base-content opacity-70 mb-4">
                  For issues related to online sexual exploitation.
                </p>
                <a href="tel:1-800-656-4673" class="btn btn-outline btn-sm">Call Now</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>