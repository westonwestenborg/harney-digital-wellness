---
import Layout from "../layouts/Layout.astro";
import AssessmentQuiz from "../components/AssessmentQuiz.astro";
---

<Layout title="Quick Start Guides - Harney County Digital Wellness">
    <div class="min-h-screen bg-base-100">
        <!-- Hero Section -->
        <section
            class="hero-gradient-primary py-16"
        >
            <div class="container mx-auto px-4 text-center">
                <h1 class="text-4xl font-bold hero-title mb-4">
                    Quick Start Guides
                </h1>
                <p
                    class="text-xl hero-subtitle max-w-2xl mx-auto"
                >
                    Find the right resources for your family's digital wellness
                    needs in just a few minutes
                </p>
            </div>
        </section>

        <!-- Assessment Section -->
        <section class="py-16">
            <div class="container mx-auto px-4">
                <div class="max-w-4xl mx-auto">
                    <div class="card bg-base-100 shadow-xl assessment-container">
                        <div class="card-body">
                            <h2 class="card-title text-2xl assessment-text mb-6">
                                Is My Child at Risk? (2-minute assessment)
                            </h2>
                            <p class="assessment-subtitle mb-6">
                                Take this quick assessment to understand your
                                child's digital habits and get personalized
                                recommendations.
                            </p>

                            <AssessmentQuiz />
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Final Step Survey Callout -->
        <section class="py-12 bg-flexoki-green-50">
            <div class="container mx-auto px-4">
                <div class="card bg-base-100 shadow-xl max-w-3xl mx-auto">
                    <div class="card-body text-center">
                        <h2 class="text-2xl font-bold text-flexoki-green-900 mb-4">
                            Final Step: Share Your Experience
                        </h2>
                        <p class="mb-6">
                            After exploring the Healthy Digital Habits Toolkit with your child, please take 2–3 minutes to complete our Parent Feedback Survey.
                            Your anonymous input helps us understand what works—and how we can make it even better.
                        </p>
                        <p class="mb-6 font-medium">Participants will also have the opportunity to enter a raffle for a small prize.</p>
                        <a href="https://forms.gle/oPm7jLfUwdLb5e4c7" target="_blank" rel="noopener" class="btn btn-success">
                            Take the Survey Now
                        </a>
                    </div>
                </div>
            </div>
        </section>

        <!-- Quick Start Guides -->
        <section class="py-16 bg-base-200">
            <div class="container mx-auto px-4">
                <div class="max-w-6xl mx-auto">
                    <h2
                        class="text-3xl font-bold text-center text-primary mb-12"
                    >
                        Get Your Quick Start Guide
                    </h2>

                    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                        <!-- Screen Time Guide -->
                        <div
                            class="card bg-base-100 shadow-lg card-hover-lift guidance-section"
                        >
                            <div class="card-body">
                                <div
                                    class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-4"
                                >
                                    <svg
                                        class="w-6 h-6 text-primary"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                                        ></path>
                                    </svg>
                                </div>
                                <h3
                                    class="card-title text-lg text-primary mb-3"
                                >
                                    Too Much Screen Time
                                </h3>
                                <p
                                    class="text-base-content opacity-70 text-sm mb-4"
                                >
                                    Tools for setting healthy boundaries and
                                    creating family media plans
                                </p>
                                <div class="card-actions">
                                    <a
                                        href="/screen-time/"
                                        class="guidance-button"
                                        >Get Screen Time Guide</a
                                    >
                                </div>
                            </div>
                        </div>

                        <!-- Safety Guide -->
                        <div
                            class="card bg-base-100 shadow-lg card-hover-lift crisis-alert"
                        >
                            <div class="card-body">
                                <div
                                    class="w-12 h-12 bg-accent/10 rounded-lg flex items-center justify-center mb-4"
                                >
                                    <svg
                                        class="w-6 h-6 text-accent"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
                                        ></path>
                                    </svg>
                                </div>
                                <h3 class="card-title text-lg text-accent mb-3">
                                    Safety & Cyberbullying
                                </h3>
                                <p
                                    class="text-base-content opacity-70 text-sm mb-4"
                                >
                                    Prevention strategies and device safety
                                    settings
                                </p>
                                <div class="card-actions">
                                    <a
                                        href="/online-safety/"
                                        class="crisis-button"
                                        >Learn About Online Safety</a
                                    >
                                </div>
                            </div>
                        </div>

                        <!-- Digital Balance Guide -->
                        <div
                            class="card bg-base-100 shadow-lg card-hover-lift wellness-card"
                        >
                            <div class="card-body">
                                <div
                                    class="w-12 h-12 bg-secondary/10 rounded-lg flex items-center justify-center mb-4"
                                >
                                    <svg
                                        class="w-6 h-6 text-secondary"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
                                        ></path>
                                    </svg>
                                </div>
                                <h3
                                    class="card-title text-lg text-secondary mb-3"
                                >
                                    Healthy Digital Balance
                                </h3>
                                <p
                                    class="text-base-content opacity-70 text-sm mb-4"
                                >
                                    Mindful activities and alternatives to
                                    screen time
                                </p>
                                <div class="card-actions">
                                    <a
                                        href="/mindful-breaks/"
                                        class="wellness-button"
                                        >Get Mindful Breaks Guide</a
                                    >
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Emergency Resources -->
        <section class="py-16">
            <div class="container mx-auto px-4">
                <div class="max-w-4xl mx-auto">
                    <div
                        class="card bg-base-100 shadow-lg crisis-alert"
                    >
                        <div class="card-body">
                            <h2 class="text-2xl font-bold text-accent mb-6">
                                Emergency Resources
                            </h2>
                            <p class="text-base-content opacity-70 mb-6">
                                <strong
                                    >If you need immediate help or are concerned
                                    about your child's safety online:</strong
                                >
                            </p>

                            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                                <!-- Crisis Support -->
                                <div>
                                    <h3
                                        class="text-xl font-semibold text-accent mb-4"
                                    >
                                        Crisis Support
                                    </h3>
                                    <div class="space-y-3">
                                        <div
                                            class="flex items-center p-3 bg-accent/5 rounded-lg"
                                        >
                                            <svg
                                                class="w-5 h-5 text-accent mr-3"
                                                fill="none"
                                                stroke="currentColor"
                                                viewBox="0 0 24 24"
                                            >
                                                <path
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    stroke-width="2"
                                                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                                                ></path>
                                            </svg>
                                            <div>
                                                <p class="font-semibold">
                                                    988 Suicide and Crisis
                                                    Lifeline
                                                </p>
                                                <a
                                                    href="tel:988"
                                                    class="text-accent text-sm hover:underline"
                                                    >Call 988</a
                                                >
                                            </div>
                                        </div>

                                        <div
                                            class="flex items-center p-3 bg-secondary/5 rounded-lg"
                                        >
                                            <svg
                                                class="w-5 h-5 text-secondary mr-3"
                                                fill="none"
                                                stroke="currentColor"
                                                viewBox="0 0 24 24"
                                            >
                                                <path
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    stroke-width="2"
                                                    d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
                                                ></path>
                                            </svg>
                                            <div>
                                                <p class="font-semibold">
                                                    Crisis Text Line
                                                </p>
                                                <a
                                                    href="sms:741741&body=HOME"
                                                    class="text-secondary text-sm hover:underline"
                                                    >Text HOME to 741741</a
                                                >
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Local Support -->
                                <div>
                                    <h3
                                        class="text-xl font-semibold text-primary mb-4"
                                    >
                                        Local Support
                                    </h3>
                                    <div class="bg-primary/5 p-4 rounded-lg">
                                        <p
                                            class="text-base-content opacity-70 text-sm mb-3"
                                        >
                                            Need local help? Visit the <a href="/get-help/#providers" class="link link-primary">Harney County School District #3&nbsp;Student Services</a> or <a href="/get-help/#providers" class="link link-primary">Symmetry&nbsp;Care&nbsp;Inc.&nbsp;24/7&nbsp;Crisis&nbsp;Response</a> sections in our local resources.
                                        </p>
                                        <a
                                            href="/get-help/"
                                            class="crisis-button btn-sm"
                                            >Find Harney County Support
                                            Resources</a
                                        >
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</Layout>
