---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Additional Resources - Harney County Digital Wellness">
  <div class="min-h-screen bg-base-100">
    <!-- Hero Section -->
    <section class="bg-gradient-to-r from-accent/10 to-flexoki-paper-50 py-16">
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-4xl font-bold text-accent mb-4">Additional Resources</h1>
        <p class="text-xl text-base-content opacity-70 max-w-2xl mx-auto">
          Trusted external resources to support your family's digital wellness journey
        </p>
      </div>
    </section>

    <!-- Social Media Safety Controls -->
    <section class="py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl font-bold text-center text-primary mb-12">Social Media Safety Controls</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <!-- Instagram -->
            <div class="card bg-base-100 shadow-lg hover:shadow-xl transition-shadow">
              <div class="card-body">
                <div class="flex items-center mb-4">
                  <div class="w-12 h-12 bg-gradient-to-br from-purple-500 to-pink-500 rounded-lg flex items-center justify-center mr-3">
                    <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                    </svg>
                  </div>
                  <h3 class="card-title text-lg">Instagram Safety</h3>
                </div>
                <p class="text-base-content opacity-70 text-sm mb-4">
                  Set up privacy controls, manage who can contact your teen, and enable safety features on Instagram.
                </p>
                <div class="card-actions">
                  <a href="https://help.instagram.com/285881641526716" target="_blank" class="btn btn-primary btn-sm">
                    Official Safety Guide
                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                    </svg>
                  </a>
                </div>
              </div>
            </div>

            <!-- Add other social media cards here -->
            <div class="card bg-base-100 shadow-lg hover:shadow-xl transition-shadow">
              <div class="card-body">
                <div class="flex items-center mb-4">
                  <div class="w-12 h-12 bg-yellow-400 rounded-lg flex items-center justify-center mr-3">
                    <span class="text-white text-xs font-bold">SC</span>
                  </div>
                  <h3 class="card-title text-lg">Snapchat Safety</h3>
                </div>
                <p class="text-base-content opacity-70 text-sm mb-4">
                  Configure privacy settings and understand safety features for teens.
                </p>
                <div class="card-actions">
                  <a href="https://support.snapchat.com/en-US/a/safety-center" target="_blank" class="btn btn-primary btn-sm">
                    Safety Center
                  </a>
                </div>
              </div>
            </div>

            <div class="card bg-base-100 shadow-lg hover:shadow-xl transition-shadow">
              <div class="card-body">
                <div class="flex items-center mb-4">
                  <div class="w-12 h-12 bg-black rounded-lg flex items-center justify-center mr-3">
                    <span class="text-white text-xs font-bold">TT</span>
                  </div>
                  <h3 class="card-title text-lg">TikTok Safety</h3>
                </div>
                <p class="text-base-content opacity-70 text-sm mb-4">
                  Learn about family safety mode and content filters.
                </p>
                <div class="card-actions">
                  <a href="https://support.tiktok.com/en/safety-hc" target="_blank" class="btn btn-primary btn-sm">
                    Safety Hub
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- National Organizations -->
    <section class="py-16 bg-base-200">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl font-bold text-center text-primary mb-12">Trusted National Organizations</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <div class="card bg-base-100 shadow-lg">
              <div class="card-body">
                <h3 class="card-title text-lg mb-2">Common Sense Media</h3>
                <p class="text-base-content opacity-70 text-sm mb-4">
                  Age-based reviews and guidance for movies, games, apps, and books.
                </p>
                <a href="https://www.commonsensemedia.org" target="_blank" class="btn btn-outline btn-sm">Visit Site</a>
              </div>
            </div>

            <div class="card bg-base-100 shadow-lg">
              <div class="card-body">
                <h3 class="card-title text-lg mb-2">ConnectSafely</h3>
                <p class="text-base-content opacity-70 text-sm mb-4">
                  Parents' guides to safe and secure social networking.
                </p>
                <a href="https://www.connectsafely.org" target="_blank" class="btn btn-outline btn-sm">Visit Site</a>
              </div>
            </div>

            <div class="card bg-base-100 shadow-lg">
              <div class="card-body">
                <h3 class="card-title text-lg mb-2">Sleep Foundation</h3>
                <p class="text-base-content opacity-70 text-sm mb-4">
                  Screen time's impact on sleep and healthy habits.
                </p>
                <a href="https://www.sleepfoundation.org" target="_blank" class="btn btn-outline btn-sm">Visit Site</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>