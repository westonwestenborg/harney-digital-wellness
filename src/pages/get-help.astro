---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Get Help - Harney County Digital Wellness">
  <div class="min-h-screen bg-base-100">
    <!-- Hero Section -->
    <section class="bg-gradient-to-r from-flexoki-magenta-50 to-flexoki-paper-50 py-16">
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-4xl font-bold text-accent mb-4">Get Help</h1>
        <p class="text-xl text-base-content opacity-70 max-w-2xl mx-auto">
          Local and national resources for Harney County families
        </p>
      </div>
    </section>

    <!-- Crisis Support -->
    <section id="crisis" class="py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <div class="card bg-base-100 shadow-lg mb-8">
            <div class="card-body">
              <h2 class="text-3xl font-bold text-accent mb-6">Crisis Support - Available 24/7</h2>
              
              <div class="alert alert-error mb-6">
                <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z" />
                </svg>
                <div>
                  <h3 class="font-bold">If you or your child are in immediate danger</h3>
                  <div class="text-xs">Please call 911 or go to your nearest emergency room immediately.</div>
                </div>
              </div>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <!-- National Crisis Support -->
                <div>
                  <h3 class="text-xl font-semibold text-primary mb-4">National Crisis Support</h3>
                  
                  <div class="space-y-4">
                    <div class="card bg-primary/5 border border-primary/20">
                      <div class="card-body p-4">
                        <h4 class="font-semibold text-primary">988 Suicide & Crisis Lifeline</h4>
                        <ul class="text-sm text-base-content opacity-70 mt-2">
                          <li>• Call or text 988 for free, confidential crisis support</li>
                          <li>• Available 24/7, 365 days a year</li>
                        </ul>
                        <div class="card-actions mt-3">
                          <a href="tel:988" class="btn btn-primary btn-sm">Call 988</a>
                        </div>
                      </div>
                    </div>

                    <div class="card bg-secondary/5 border border-secondary/20">
                      <div class="card-body p-4">
                        <h4 class="font-semibold text-secondary">Crisis Text Line</h4>
                        <ul class="text-sm text-base-content opacity-70 mt-2">
                          <li>• Text HOME to 741741 for crisis support</li>
                          <li>• Available 24/7</li>
                        </ul>
                        <div class="card-actions mt-3">
                          <a href="sms:741741&body=HOME" class="btn btn-secondary btn-sm">Text HOME to 741741</a>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Local Crisis Support -->
                <div>
                  <h3 class="text-xl font-semibold text-primary mb-4">Local Crisis Support</h3>
                  
                  <div class="card bg-base-100 shadow-md">
            <div class="card-body p-4">
              <h4 class="font-semibold text-secondary mb-2">Symmetry Care Inc. – 24/7 Crisis Response</h4>
              <ul class="list-disc list-inside text-sm text-base-content opacity-70 space-y-1">
                <li>County crisis line available 24/7: <a href="tel:541-573-8376" class="link">541-573-8376</a> (or dial <a href="tel:988" class="link">988</a>)</li>
                <li>Mobile Crisis Team serves all of Harney County for on-site support</li>
                <li>Immediate assessment, safety planning, and connection to ongoing services</li>
                <li>Walk-in support Mon–Fri 8 AM–5 PM at 348 W. Adams St., Burns</li>
              </ul>
              <div class="card-actions mt-3">
                <a href="tel:541-573-8376" class="btn btn-secondary btn-sm">Call 541-573-8376</a>
              </div>
            </div>
          </div>

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Local Harney County Resources -->
    <section id="providers" class="py-16 bg-base-200">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl font-bold text-center text-primary mb-12">Local Harney County Resources</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <!-- School District -->
            <div class="card bg-base-100 shadow-lg">
              <div class="card-body">
                <h3 class="card-title text-xl text-primary mb-4">Harney County School District</h3>
                
                <div class="space-y-4">
                  <div>
                    <h4 class="font-semibold mb-2">Counseling Center</h4>
                    <ul class="list-disc list-inside text-sm text-base-content opacity-70 space-y-1">
                      <li>Academic &amp; career planning (course scheduling, scholarship info).</li>
                      <li>Social-emotional support (short-term individual sessions, crisis triage, outside-referral guidance).</li>
                      <li>Family connections (parent meetings, links to local mental-health providers).</li>
                    </ul>
                  </div>

                  <div>
                    <h4 class="font-semibold mb-2">Accessing Services</h4>
                    <ol class="list-decimal list-inside text-sm text-base-content opacity-70 space-y-1">
                      <li>Students – ask a teacher or the school office for a counselor referral slip or drop by during posted office hours.</li>
                      <li>Parents/guardians – call the school number below or email the Student Services Director to request an appointment or resources.</li>
                      <li>Community providers – coordinate through the Student Services Director (<a href="tel:541-573-6811" class="link">541-573-6811</a>) for multi-disciplinary support.</li>
                    </ol>
                  </div>

                  <div>
                    <h4 class="font-semibold mb-2">Contact Information</h4>
                    <p class="text-sm text-base-content opacity-70">
                      <strong>Student Services Department</strong><br />
                      190 Hines Blvd., Burns, OR 97720<br />
                      Phone: <a href="tel:541-573-6811" class="link">541-573-6811</a><br />
                      Director: <a href="mailto:taciweil@hcsd3.org" class="link">Taci Weil, taciweil@hcsd3.org</a>
                    </p>
                    <div class="mt-4 space-y-2 text-sm text-base-content opacity-70">
                      <p>
                        <strong>Slater Elementary (K-5)</strong><br />
                        Nicki Henshaw, School Counselor<br />
                        Front office — <a href="tel:541-573-720" class="link">541-573-720</a>,
                        <a href="mailto:nickihenshaw@hcsd3.org" class="link">nickihenshaw@hcsd3.org</a>
                      </p>
                      <p>
                        <strong>Hines Middle (6-8)</strong><br />
                        School counselor available (contact front office)<br />
                        <a href="tel:541-573-6436" class="link">541-573-6436</a>
                      </p>
                      <p>
                        <strong>Burns High (9-12)</strong><br />
                        School counselor available (contact main office)<br />
                        <a href="tel:541-573-2044" class="link">541-573-2044</a>
                      </p>
                      <p>
                        <strong>Monroe School (Alt Ed)</strong><br />
                        Student-support staff on site; call for counseling referral<br />
                        <a href="tel:541-573-3019" class="link">541-573-3019</a>
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Symmetry Care -->
            <div class="card bg-base-100 shadow-lg">
              <div class="card-body">
                <h3 class="card-title text-xl text-secondary mb-4">Symmetry Care</h3>
                
                <div class="space-y-4">
                  <div>
                    <h4 class="font-semibold mb-2">Mental &amp; Behavioral-Health Services</h4>
                    <ul class="list-disc list-inside text-sm text-base-content opacity-70 space-y-1">
                      <li>Outpatient therapy &amp; counseling for children, teens, adults, couples, and families (individual, group, grief, trauma-focused).</li>
                      <li>Psychiatric care – evaluation, medication management, and ongoing monitoring by a psychiatric team.</li>
                      <li>Substance-use &amp; gambling-addiction treatment, including dual-diagnosis programs.</li>
                      <li>24/7 crisis response – county crisis line <a href="tel:541-573-8376" class="link">541-573-8376</a> (or dial 988); mobile crisis team covers all of Harney County.</li>
                      <li>Case management, life-skills &amp; supported-employment coaching to help clients meet daily-living and job-readiness goals.</li>
                    </ul>
                  </div>

                  <div>
                    <h4 class="font-semibold mb-2">Youth &amp; Family Support</h4>
                    <ul class="list-disc list-inside text-sm text-base-content opacity-70 space-y-1">
                      <li>Wraparound &amp; ICTS (Intensive Community-based Treatment &amp; Support) – care-coordination teams for youth 0-18 with complex behavioral or developmental needs.</li>
                      <li>Community Health Worker services – help with housing, food security, transportation, and Oregon Health Plan navigation.</li>
                      <li>Parent-focused collaboration – therapists include caregivers, offer referrals to local parenting resources, and can arrange in-home or telehealth visits to ease rural-access barriers.</li>
                      <li>If a family seeks support around screen-time stress, cyber-bullying, or other digital-wellness issues, the intake team can match them with a clinician specializing in that area.</li>
                    </ul>
                  </div>

                  <div>
                    <h4 class="font-semibold mb-2">Contact &amp; Scheduling</h4>
                    <p class="text-sm text-base-content opacity-70">
                      <strong>Clinic address</strong><br />
                      348 W. Adams St., Burns, OR 97720
                    </p>
                    <p class="text-sm text-base-content opacity-70">
                      <strong>Business hours</strong><br />
                      Mon – Fri 8&nbsp;AM – 5&nbsp;PM; evening sessions by appointment.
                    </p>
                    <p class="text-sm text-base-content opacity-70">
                      <strong>24-hour line / switchboard</strong><br />
                      <a href="tel:541-573-8376" class="link">541-573-8376</a>
                    </p>
                    <p class="text-sm text-base-content opacity-70">
                      <strong>Email</strong><br />
                      <a href="mailto:symcare@symmetrycareinc.com" class="link">symcare@symmetrycareinc.com</a>
                    </p>
                    <p class="text-sm text-base-content opacity-70">
                      <strong>Getting started</strong><br />
                      Drop in during business hours, call the number above, or click “How to Enroll” on the Symmetry Care website; secure Client Portal available once enrolled.
                    </p>
                    <p class="text-sm text-base-content opacity-70">
                      <strong>Insurance &amp; cost</strong><br />
                      Oregon Health Plan (EOCCO) and most private insurers accepted; sliding-scale options available on request.
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Key School Contacts -->
    <section class="py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl font-bold text-center text-primary mb-8">Key School Contacts</h2>
          
          <div class="card bg-base-100 shadow-lg">
            <div class="card-body">
              <p class="text-base-content opacity-70 mb-6">
                These school district staff members can provide support for digital wellness concerns and connect you with appropriate resources.
              </p>
              
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="bg-primary/5 p-4 rounded-lg">
                  <h3 class="font-semibold text-primary mb-2">Nicki Henshaw</h3>
                  <p class="text-base-content opacity-70 text-sm">
                    School Counselor, Slater Elementary (K-5)<br />
                    Phone: <a href="tel:541-573-720" class="link">541-573-720</a><br />
                    Email: <a href="mailto:nickihenshaw@hcsd3.org" class="link">nickihenshaw@hcsd3.org</a>
                  </p>
                </div>

                <div class="bg-secondary/5 p-4 rounded-lg">
                  <h3 class="font-semibold text-secondary mb-2">Maggie Young</h3>
                  <p class="text-base-content opacity-70 text-sm">
                    School Counselor, Burns High (9-12)<br />
                    Phone: <a href="tel:541-573-2044" class="link">541-573-2044</a><br />
                    Email: <a href="mailto:maggieyoung@hcsd3.org" class="link">maggieyoung@hcsd3.org</a>
                  </p>
                </div>
              </div>
              
              <div class="mt-6 p-4 bg-accent/10 rounded-lg">
                <p class="text-sm text-base-content opacity-70">
                  <strong>Note:</strong> Don't hesitate to reach out to these contacts even if you're not sure your concern fits their role. They can help connect you with the right resources.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- National Support Resources -->
    <section class="py-16 bg-base-200">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl font-bold text-center text-primary mb-12">National Support Resources</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <div class="card bg-base-100 shadow-lg">
              <div class="card-body">
                <h3 class="card-title text-lg">SAMHSA Treatment Locator</h3>
                <p class="text-sm text-base-content opacity-70 mb-4">
                  Find mental health and substance abuse treatment programs in your area.
                </p>
                <a href="https://findtreatment.samhsa.gov" target="_blank" class="btn btn-outline btn-sm">Find Treatment</a>
              </div>
            </div>

            <div class="card bg-base-100 shadow-lg">
              <div class="card-body">
                <h3 class="card-title text-lg">National Parent Helpline</h3>
                <p class="text-sm text-base-content opacity-70 mb-4">
                  Support for parents facing any challenge.
                </p>
                <a href="tel:1-855-427-2736" class="btn btn-outline btn-sm">Call Now</a>
              </div>
            </div>

            <div class="card bg-base-100 shadow-lg">
              <div class="card-body">
                <h3 class="card-title text-lg">Crisis Text Line</h3>
                <p class="text-sm text-base-content opacity-70 mb-4">
                  Free, 24/7 crisis support via text.
                </p>
                <a href="sms:741741&body=HOME" class="btn btn-outline btn-sm">Text HOME</a>
              </div>
            </div>

            <div class="card bg-base-100 shadow-lg">
              <div class="card-body">
                <h3 class="card-title text-lg">National Sexual Assault Hotline</h3>
                <p class="text-sm text-base-content opacity-70 mb-4">
                  For issues related to online sexual exploitation.
                </p>
                <a href="tel:1-800-656-4673" class="btn btn-outline btn-sm">Call Now</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>